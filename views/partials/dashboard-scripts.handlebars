<script>
$(document).ready(() => {
    // button control
    // hide content
    $('#allBook').hide();
    // toggle content
    $('#allButton').click(() => {
        $('#allBook').toggle();
    });

    $('#modalSubmit').click((e) => {
        e.preventDefault();
        const profilePic = $('#profilePic').val().trim();
        const aboutMe = $('#aboutInput').val().trim();
        const username = $('#username').val().trim();
        const modal = {
            firstname: '{{user.firstname}}',
            lastname: '{{user.lastname}}',
            email: '{{user.email}}',
            about: aboutMe,
            photo: profilePic,
            username: username
        }
        console.log(profilePic, aboutMe, username);
        $.ajax('/api/user/' + {{ user.id }}, {
            type: "PUT",
            data: modal
        }).then(result => {
            location.reload();
        }).catch(err => {
            console.error(err);
        });
    });
});
</script>