{{> header}}
<div class="container">
    <div class="jumbotron">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <i class="fas fa-cog float-right" data-toggle="modal" data-target="#exampleModal"></i>
                </div>
            </div>
            <div class=" row">
                <div class="col-sm-4">
                    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRCeE-XUkjXgBWaqNaMprbN58CCXIOo8UxSQickhEYJw2b3Bae2dA"
                        class="mr-3" alt="...">
                </div>
                <div class="col-sm-8">
                    <h1>{{user.firstname}}</h1>
                    <h2>Number of Books Written: </h2>
                    <h3>About:</h3>
                    <p id="about">sometimes I dream that im a lake looking up into a sky hoping that one day
                        I can become a cloud
                        also my parents take turns beating me :D
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12 text-center">
                    <button class="btn" id="recentButton">recent books</button>
                    <button class="btn" id="savedButton">Saved books</button>
                    <button class="btn" id="allButton">view all books</button>
                </div>
            </div>
            <div class="row text-center">
                <div class="col-sm-12">
                    <p id="allBook"></p>
                </div>
                <div class="col-sm-12">
                    <p id="recentBook"></p>
                </div>
                <div class="col-sm-12" id="savedBook">
                    <p>saved

                    </p>
                </div>
            </div>
        </div>
    </div>

</div>
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Settings</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                
                <input class="form-control" type="text" placeholder="Profile Picture">
                <input class="form-control" type="text" placeholder="About">
                <input class="form-control" type="text" placeholder="Username">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

